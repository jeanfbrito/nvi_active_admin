<div class="onsite-course">
  <div class="onsite-course-heading">
    <div class="left">
      <a data-toggle="collapse" href="#course_<%= onsite_course.id %>"><h2><%= onsite_course.title %> <small><%= onsite_course.instructor.name %></small></h2></a>
    </div>
    <div class="right">
      <p style="float: left; margin-right: 10px;"><small><%= number_to_currency(onsite_course.price) %></small></p>
      <%= add_to_cart(onsite_course) %>
    </div>
  </div>
  <div class="clear"></div>
  <div id="course_<%= onsite_course.id %>" class="onsite-course-body collapse in">
    <div class="onsite-course-inner">
      <%= onsite_course.description %>
    </div>
    <div class="lessons">
      <h3>Modules</h3>
      <%= render onsite_course.lessons %>
    </div>
  </div>
</div>