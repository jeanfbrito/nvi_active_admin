#login.well
  %h2 Member Login
  /= form_tag user_sessions_url, :method => :post do
  = form_tag '/', :method => :post do
    = text_field_tag :username, nil, placeholder: "Email", class: "span2"
    = password_field_tag :password, nil, placeholder: "Password", class: "span2"
    %br
    = submit_tag "Login", class: "btn btn-primary btn-small"
  /= link_to 'Forgot Password?', new_password_reset_path
  = link_to 'Forgot Password?', '/'
  %br
  /= link_to 'Sign Up', new_user_path
  = link_to 'Sign Up', '/'
.clear