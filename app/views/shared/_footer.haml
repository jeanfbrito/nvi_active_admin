    - @all_market_sectors.each do |market_sector|
      - cache ["footer_content", market_sector] do
        .column
          %h5= market_sector.name
          %ul
            - if market_sector.has_online?
              %li
                = link_to "Online Courses", market_sector_path(market_sector, anchor: 'online')
