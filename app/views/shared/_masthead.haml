#masterhead
  / Logo
  .logo
    = link_to root_path do
      = image_tag 'logo.png'
  / masterhead Right Section
  .topright_sec
    / top navigation
    .topnavigation
      %ul
        %li.first
        %li
          = link_to "News", news_index_path
        %li
          %a{:href => "#"} Events
        %li
          = link_to "Careers", jobs_path
        %li
          %a{:href => "#"} Student Profile
        %li
          %a{:href => "#"} Our Campus
        - if logged_in?
          %li
            = link_to "Cart (#{current_cart.size})", cart_path
        %li
          %a.nobg{:href => "#"}
            = image_tag 'rss.gif'
        %li.last
    .clear
    / top search
    .top_search
      .advance_search
        %a{:href => "#"} Advanced Search
        %form.form-search.form-inline
          %input.search-query.input-medium{:name => "txt", :placeholder => "Search", :type => "text"}/
          %input.btn.btn-small{:href => "#", :type => "submit", :value => "Search"}/
    .clear
  / Navigation
  = render 'shared/navigation'
