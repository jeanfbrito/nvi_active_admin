<div class="location <%= cycle 'odd', 'even', name: "onsite_course_#{onsite_course.id}" %>">
  <div class="location-header">
    <div class="left">
      <a data-toggle="collapse" href="#location_<%= location.id %>"><p><%= location.name %></p></a>
    </div>
    <div class="right">
      <p style="float: left; margin-right: 10px;"><small><%= number_to_currency(onsite_course.price) %></small></p>
      <%= add_to_cart(onsite_course) %>
    </div>
  </div>
  <div class="clear"></div>
  <div class="location-body collapse" id="location_<%= location.id %>">
    <div class="location-inner">
      <p>Location meta data goes here</p>
      <%= render onsite_course.lessons, location: location %>
    </div>
  </div>
</div>
<div class="clear"></div>